{
  "name": "fb-clone-backend",
  "version": "0.0.1",
  "engines": {
    "node": "^16.14.0"
  },
  "description": "FB clone backend.",
  "main": "./build/bin/www.js",
  "bin": {
    "fb-clone-backend": "./build/bin/www.js"
  },
  "scripts": {
    "start": "node ./build/bin/www",
    "start:b": "npm run build && npm run start",
    "start:dev": "ts-node-dev --inspect=9229 -- ./src/bin/www.ts",
    "start:brk": "ts-node-dev --inspect-brk=9229 -- ./src/bin/www.ts",
    "build": "rimraf ./build && tsc",
    "test": "jest",
    "lint": "eslint ./src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sigma-intern/fb-clone-backend.git"
  },
  "keywords": [
    "social",
    "social-network"
  ],
  "author": "sigma-interns",
  "license": "Unlicense",
  "bugs": {
    "url": "https://github.com/sigma-intern/fb-clone-backend/issues"
  },
  "homepage": "https://github.com/sigma-intern/fb-clone-backend#readme",
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "dependencies": {
    "app-root-path": "^3.0.0",
    "axios": "^0.26.1",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.2",
    "cors": "^2.8.5",
    "dayjs": "^1.11.0",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-openapi": "^10.1.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "log4js": "^6.4.4",
    "mongodb": "^4.4.1",
    "swagger-ui-express": "^4.3.0",
    "tslib": "^2.3.1"
  },
  "devDependencies": {
    "@types/app-root-path": "^1.2.4",
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash": "^4.14.180",
    "@types/node": "^17.0.23",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.1",
    "readonly-date": "^1.0.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.4",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.3"
  }
}
